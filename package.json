{
  "name": "pokemon-trainer",
  "version": "1.0.0",
  "description": "Uma aplicação em node.js, express e mongoDB para ajudar todos os treinadores pokemons da primeira geração à completar sua pokédex!",
  "main": "src/index.ts",
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "dev": "ts-node-dev --ignore-watch node_modules src/index.ts",
    "debug": "nodemon --watch \"./src/**\" --ext \"ts,js\" --ignore \"src/**/*.spec.ts,src/**/*.json\" --exec \"ts-node src/index.ts\"",
    "test": "jest -i --forceExit --verbose",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rafaelPermec/pokemon-trainer-api.git"
  },
  "author": "Rafael P. M. Castro",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rafaelPermec/pokemon-trainer-api/issues"
  },
  "homepage": "https://github.com/rafaelPermec/pokemon-trainer-api#readme",
  "dependencies": {
    "axios": "^0.27.2",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "helmet": "^5.1.0",
    "http-status-codes": "^2.2.0",
    "joi": "^17.6.0",
    "swagger-ui-express": "^4.5.0",
    "mongoose": "6.1.8"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/axios": "^0.14.0",
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/jest": "27.4.1",
    "@types/node": "^18.0.6",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/joi": "17.2.3",
    "@types/chai": "4.3.0",
    "@types/chai-http": "4.2.0",
    "@types/mocha": "9.1.0",
    "@types/sinon": "10.0.11",
    "@types/chai-as-promised": "7.1.5",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "eslint": "^8.20.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-typescript": "^3.2.7",
    "eslint-plugin-import": "^2.26.0",
    "eslint-config-airbnb-typescript": "15.0.0",
    "eslint-plugin-editorconfig": "3.2.0",
    "eslint-plugin-mocha": "9.0.0",
    "dotenv": "^16.0.1",
    "nodemon": "^2.0.19",
    "supertest": "^6.2.4",
    "ts-jest": "27.1.3",
    "ts-node": "10.4.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4",
    "chai": "4.3.6",
    "chai-http": "4.3.0",
    "jest": "27.5.1",
    "mocha": "9.2.1",
    "sinon": "13.0.1",
    "chai-as-promised": "7.1.1"
  }
}